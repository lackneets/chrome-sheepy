{
  "background": {
    "persistent": false, 
    "scripts": [
      "background.js"
    ]
  },
  "description": "Clone what you see at runtime, save as standalone single HTML file.",
  "icons": {
    "128": "logotypes/sheepy-128.png",
    "48": "logotypes/sheepy-48.png",
    "16": "logotypes/sheepy-16.png"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : [
        "jquery.min.js",
        "sheepy.js",
        "shepherd.js"
      ],
      "css" : [ "sheepy.css" ],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "name": "Sheepy 網頁複製機",
  "permissions": [
    "http://*/",
    "https://*/" ,
    "contextMenus"
  ],
  "version": "1.0.0.2",
  "manifest_version" : 2
}